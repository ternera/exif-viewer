{
  "name": "EXIF Metadata Viewer",
  "version": "1.1",
  "manifest_version": 3,
  "description": "A browser extension to display EXIF/metadata information of images directly on web pages.",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}